{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["off"],
    "comma-dangle": "off",
    "import/extensions": [
      "warn",
      {
        "js": "never",
        "json": "never"
      }
    ],
    "max-len": [
      "warn",
      140
    ],
    "object-shorthand": "off",
    "object-curly-newline": "off",
    "no-console": "off",
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "class-methods-use-this": "off",
    "semi": [
      "error",
      "always"
    ]
  }
}
